{
  "namespace": "screen_animation",

  // Images //

  "loading_spinner_animation": {
    "type": "image",
    "layer": 2,
    "texture": "textures/ui/loading_spin",
    "uv": "@screen_animation.spinner_anim",
    "uv_size": [ 7, 7 ],
    "size": [ 14, 14 ],
    "bindings": [
      {
        "binding_name": "#spinner_animation_visible",
        "binding_name_override": "#visible"
      }
    ]
  },

  // Animations //

  "spinner_anim": {
    "anim_type": "flip_book",
    "frame_count": 10,
    "frame_step": 7,
    "fps": 24,
    "duration": "$transition_time_pop",
    "initial_uv": [ 0, 0 ],
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end"
  },

  "spinner_anim_entrance": {
    "anim_type": "offset",
    "easing": "Out_Cubic",
    "duration": "$transition_time_pop",
    "play_event": "screen.entrance_pop",
    "end_event": "screen.entrance_end",
    "from": [ "-25%" 0 ],
    "to": [ 0, 0 ]
  }
}