{
 "namespace": "furnace_pocket",
 "fuel_label@common.txt": {
  "text": "furnaceScreen.fuel",
  "text_alignment": "bottom_middle",
  "shadow": true,
  "font_scale_factor": 1.2,
  "color": "white",
  "size": [
   "default",
   12
  ]
 },
 "flame_full_image@common.img": {
  "texture": "textures/ui/flame_full_image",
  "layer": 3,
  "clip_direction": "down",
  "size": [
   48,
   78
  ],
  "bindings": [
   {
    "binding_name": "#furnace_flame_ratio",
    "binding_name_override": "#clip_ratio",
    "binding_condition": "always"
   }
  ]
 },
 "flame_empty_image@common.img": {
  "texture": "textures/ui/flame_empty_image",
  "layer": 2,
  "size": [
   48,
   78
  ]
 },
 "flame_image_panel@common.panel": {
  "anchor_from": "left_middle",
  "anchor_to": "left_middle",
  "layer": 2,
  "offset": [
   64,
   0
  ],
  "controls": [
   {
    "flame_full@flame_full_image": {}
   },
   {
    "flame_empty@flame_empty_image": {}
   },
   {
    "fuel_label@fuel_label": {
     "offset": [
      0,
      0
     ]
    }
   }
  ]
 },
 "arrow_empty_image@common.img": {
  "texture": "textures/ui/arrow_inactive",
  "layer": 1,
  "size": [
   32,
   64
  ]
 },
 "arrow_full_image@common.img": {
  "texture": "textures/ui/arrow_active",
  "layer": 3,
  "clip_direction": "left",
  "size": [
   32,
   64
  ],
  "bindings": [
   {
    "binding_name": "#furnace_arrow_ratio",
    "binding_name_override": "#clip_ratio",
    "binding_condition": "always"
   }
  ]
 },
 "arrow_image_panel@common.panel": {
  "layer": 2,
  "controls": [
   {
    "arrow_full@arrow_full_image": {}
   },
   {
    "arrow_empty@arrow_empty_image": {}
   }
  ]
 },
 "inventory_grid": {
  "type": "grid",
  "grid_rescaling_type": "horizontal",
  "collection_name": "combined_hotbar_and_inventory_items",
  "grid_item_template": "common.pocket_ui_container_item",
  "$item_collection_name": "combined_hotbar_and_inventory_items",
  "grid_dimensions": [
    12,
    3
  ],
  "size": [
   288,
   "default"
  ],
  "$cell_image_size": [
   24,
   24
  ],
  "$item_renderer_panel_size": [
   24,
   24
  ],
  "$item_renderer_size": [
   20,
   20
  ]
 },
 "inventory_panel": {
  "type": "panel",
  "anchor_to": "top_left",
  "anchor_from": "top_left",
  "size": [
   "50%",
   "100%-4px"
  ],
  "offset": [
   2,
   32
  ],
  "controls": [
   {
    "grid@furnace_pocket.inventory_grid": {}
   }
  ]
 },
 "inventory_grid_item@common.grid_item_for_inventory": {
  "$item_collection_name": "inventory_items",
  "$button_ref": "crafting.inventory_container_slot_button",
  "$background_images": "crafting.container_cell_images",
  "size": "$scrolling_grid_item_size",
  "$scrolling_grid_item_size|default": [
   24,
   24
  ],
  "$item_renderer_panel_size": [
   24,
   24
  ],
  "$item_renderer_size": [
   20,
   20
  ],
  "$cell_image_size": [
   24,
   24
  ]
 },
 "furnace_screen_pocket": {
  "type": "panel",
  "size": [
   "100%",
   "100%"
  ],
  "controls": [
   {
    "header@common.new_screen_header_panel": {
     "$header_title_text": "$container_title"
    }
   },
   {
    "inventory@furnace_pocket.inventory_panel": {}
   },
   {
    "common@furnace_pocket.common_panel": {}
   }
  ]
 },
 "common_panel@common.panel": {
  "controls": [
   {
    "inventory_selected_icon_button@common.inventory_selected_icon_button": {}
   },
   {
    "hold_icon@common.inventory_take_progress_icon_button": {}
   },
   {
    "flying_item_renderer@common.flying_item_renderer": {
     "layer": 12
    }
   },
   {
    "selected_item_details_factory@common.selected_item_details_factory": {}
   },
   {
    "item_lock_notification_factory@common.item_lock_notification_factory": {
     "$offset": [
      0,
      "85%"
     ]
    }
   }
  ]
 }
}