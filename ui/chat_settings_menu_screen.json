{
    "namespace": "chat_settings",
    "mute_chat@settings_common.option_toggle": {
        "$one_line_layout": true,
        "$option_label": "chat.settings.mute_chat",
        "$option_binding_name": "#hide_chat",
        "$toggle_name": "hide_chat",
        "$focus_id": "mute_all_toggle_focus_id",
        "$focus_override_up": "reset_button_focus_id"
    },
    "mute_emote_chat@settings_common.option_toggle": {
        "$one_line_layout": true,
        "$option_label": "chat.settings.mute_emote_chat",
        "$option_binding_name": "#toggle_emote_chat",
        "$toggle_name": "toggle_emote_chat"
    },
    
    // Test Button //
    
    "mute_chat_button@common_buttons.light_text_button": {
        "$pressed_button_name": "#hide_chat",
        "$button_text": "Test - Hide Chat",
        "$focus_id": "mute_all_toggle_chat_focus_id",
        "$focus_override_up": "reset_button_focus_id",
        "size": [
            "default",
            24
        ],
        "bindings": [
            {
                "binding_name": "#hide_chat"
            }
        ]
    },
    "text_to_speech@settings_common.option_toggle": {
        "$one_line_layout": true,
        "$option_label": "chat.settings.text_to_speech",
        "$option_binding_name": "#toggle_tts",
        "$toggle_name": "toggle_tts",
        "bindings": [
            {
                "binding_name": "(not #hide_chat)",
                "binding_name_override": "#enabled"
            }
        ]
    },
    "button_reset@button": {
        "$pressed_button_name": "button.reset_chat_settings",
        "$button_text": "chat.settings.reset",
        "$focus_id": "reset_button_focus_id",
        "$focus_override_down": "mute_all_toggle_focus_id"
    },
    "general": {
        "type": "label",
        "text": "General",
        "color": "white",
        "layer": 4,
        "font_scale_factor": 1.4,
        "font_type": "MinecraftTen",
        "size": [
            "default",
            14
        ],
        "max_size": [
            "default",
            14
        ]
    },
    "font_style": {
        "type": "label",
        "text": "chat.settings.font_style",
        "color": "white",
        "layer": 4,
        "font_scale_factor": 1.4,
        "font_type": "MinecraftTen",
        "size": [
            "default",
            14
        ],
        "max_size": [
            "default",
            14
        ]
    },
    "chat_color@chat_settings.colors_dropdown_base": {
        "$option_label": "chat.settings.chatColor",
        "$color_prefix": "chat",
        "$paintbrush_color_binding": "#chat_toggle_color"
    },
    "mentions_color@chat_settings.colors_dropdown_base": {
        "$option_label": "chat.settings.mentionsColor",
        "$color_prefix": "mentions",
        "$paintbrush_color_binding": "#mentions_toggle_color"
    },
    "space": {
        "type": "panel",
        "size": [
            "default",
            4
        ]
    },
    "txt": {
        "type": "label"
    },
    "button@common_buttons.light_text_button": {},
    "chat_settings_scrolling_content": {
        "type": "panel",
        "size": [
            "100%",
            "100%c - 4px"
        ],
        "controls": [
            {
                "content": {
                    "type": "stack_panel",
                    "size": [
                        "100%",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "general@chat_settings.general": {}
                        },
                        {
                            "space0@chat_settings.space": {}
                        },
                        {
                            "mute_chat@chat_settings.mute_chat": {}
                        },
                        {
                            "mute_emote_chat@chat_settings.mute_emote_chat": {}
                        },
                        {
                            "text_to_speech@chat_settings.text_to_speech": {}
                        },
                        {
                            "font@chat_settings.font_style": {}
                        },
                        {
                            "space1@chat_settings.space": {}
                        },
                        {
                            "typeface@chat_settings.typeface_dropdown": {}
                        },
                        {
                            "font_size@chat_settings.font_size_slider": {}
                        },
                        {
                            "line_spacing@chat_settings.line_spacing_slider": {}
                        },
                        {
                            "space3@chat_settings.space": {}
                        },
                        {
                            "chat_color@chat_settings.chat_color": {}
                        },
                        {
                            "mentions@chat_settings.mentions_color": {}
                        },
                        {
                            "reset@chat_settings.button_reset": {
                                "size": [
                                    "default",
                                    24
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "chat_setting_scrolling_panel": {
        "$use_live_scrolling_bg": true,
        "$close_button": "common.transparent_bg_close_button",
        "size": [
            232,
            194
        ]
    }
}