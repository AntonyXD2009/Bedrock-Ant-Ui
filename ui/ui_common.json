{
 // Code create by @Antony C. Please no steal ;-; //

 "namespace": "common",

 "help_button": {
  "visible": false
 },

 "scroll_box/box": {
  "modifications": [
   {
    "control_name": "touch_box",
    "operation": "remove"
   }
  ]
 },

 "scroll_box/box/mouse_box": {
  "ignored": false
 },

 "scrolling_panel": {
  "modifications": [
   {
    "control_name": "scroll_touch",
    "operation": "remove"
   }
  ]
 },

 "scrolling_panel/scroll_mouse": {
  "ignored": false
 },

 "selected_item_details/item_panel_image/item_text_label": {
  "shadow": true
 },

 "selected_item_details/item_panel_image": {
  "size": [ "100%c+8px", "100%c+4px" ]
 },

 "selected_item_details": {
  "offset": "$offset",
  "$offset|default": [ 0, "-16px" ]
 },

 "screen_exit_animation_push_offset": {
  "anim_type": "offset",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": [ 0, 0 ],
  "to": [ 0, "-100%" ],
  "play_event": "screen.exit_push",
  "end_event": "screen.exit_end"
 },

 "screen_exit_animation_pop_offset": {
  "anim_type": "offset",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": [ 0, 0 ],
  "to": [ 0, "-100%" ],
  "play_event": "screen.exit_pop",
  "end_event": "screen.exit_end"
 },

 "screen_entrance_animation_push_offset": {
  "anim_type": "offset",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": [ 0, "100%" ],
  "to": [ 0, 0 ],
  "play_event": "screen.entrance_push",
  "end_event": "screen.entrance_end"
 },

 "screen_entrance_animation_pop_offset": {
  "anim_type": "offset",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": [ 0, "-100%" ],
  "to": [ 0, 0 ],
  "play_event": "screen.entrance_pop",
  "end_event": "screen.entrance_end"
 },

 "screen_exit_animation_push_fade": {
  "anim_type": "alpha",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": 1,
  "to": 0.0,
  "play_event": "screen.exit_push",
  "end_event": "screen.exit_end"
 },

 "screen_exit_animation_pop_fade": {
  "anim_type": "alpha",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": 1,
  "to": 0.0,
  "play_event": "screen.exit_pop",
  "end_event": "screen.exit_end"
 },

 "screen_entrance_animation_push_fade": {
  "anim_type": "alpha",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": 0.0,
  "to": 1,
  "play_event": "screen.entrance_push",
  "end_event": "screen.entrance_end"
 },

 "screen_entrance_animation_pop_fade": {
  "anim_type": "alpha",
  "easing": "out_cubic",
  "duration": 0.7,
  "from": 0.0,
  "to": 1,
  "play_event": "screen.entrance_pop",
  "end_event": "screen.entrance_end"
 }
}