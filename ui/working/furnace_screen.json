{
  "namespace": "furnace",
  "image": {
    "type": "image"
  },
  "screen_bg@furnace.image": {
    "texture": "textures/ui/Black",
    "alpha": 0.50
  },
  "inventory": {
    "type": "panel",
    "controls": [
      {
        "container_gamepad_helpers@common.container_gamepad_helpers": {}
      },
      {
        "flying_item_renderer@common.flying_item_renderer": {
          "layer": 11
        }
      },
      {
        "selected_item_detail@common.selected_item_details_factory": {}
      },
      {
        "item_lock_notification@common.item_lock_notification_factory": {}
      },
      {
        "root_panel@common.root_panel": {
          "layer": 1,
          "controls": [
            {
              "common_panel@common.common_panel": {}
            },
            {
              "furnace_screen_inventory": {
                "type": "panel",
                "layer": 5,
                "controls": [
                  {
                    "inventory_bottom@common.inventory_panel_bottom_half_with_label": {}
                  },
                  {
                    "hotbar_grid@common.hotbar_grid_template": {}
                  },
                  {
                    "inventory_take_progress@common.inventory_take_progress_icon_button": {}
                  }
                ]
              }
            },
            {
              "inventory_selected@common.inventory_selected_icon_button": {}
            },
            {
              "gamepad_cursor@common.gamepad_cursor_button": {}
            }
          ]
        }
      }
    ]
  },
  "furnace_screen@common.inventory_screen_common": {
    "$close_on_player_hurt|default": false,
    "close_on_player_hurt": "$close_on_player_hurt",
    "variables": [
      {
        "requires": "$desktop_screen",
        "$screen_content": "furnace.furnace_screen_content",
        "$screen_bg_content": "common.screen_background"
      },
      {
        "requires": "$pocket_screen",
        "$screen_content": "furnace_pocket.furnace_panel"
      }
    ]
  },
  "flame_panel": {
    "type": "panel",
    "size": [
      32,
      64
    ],
    "controls": [
      {
        "full@furnace.flame_full": {}
      },
      {
        "empty@furnace.flame_empty": {}
      }
    ]
  },
  "flame_full@furnace.image": {
    "texture": "textures/ui/flame_full_image",
    "layer": 3,
    "clip_direction": "down",
    "bindings": [
      {
        "binding_name": "#furnace_flame_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },
  "flame_empty@furnace.image": {
    "texture": "textures/ui/flame_empty_image",
    "layer": 2
  },
  "progress_panel": {
    "type": "panel",
    "size": [
      32,
      16
    ],
    "controls": [
      {
        "full@furnace.progress_full": {}
      },
      {
        "empty@furnace.progress_empty": {}
      }
    ]
  },
  "progress_full@furnace.image": {
    "texture": "textures/ui/progress_full_image",
    "layer": 3,
    "clip_direction": "left",
    "bindings": [
      {
        "binding_name": "#furnace_arrow_ratio",
        "binding_name_override": "#clip_ratio",
        "binding_condition": "always"
      }
    ]
  },
  "progress_empty@furnace.image": {
    "texture": "textures/ui/progress_empty_image",
    "layer": 1
  },
  "input_panel": {
    "type": "panel",
    "size": [
      28,
      28
    ],
    "controls": [
      {
        "ingredient_item@common.container_item": {
          "$item_collection_name": "furnace_ingredient_items",
          "$focus_id": "furnace_ingredient_item",
          "$focus_override_left": "FOCUS_OVERRIDE_STOP",
          "$focus_override_left_binding_type": "none",
          "$focus_override_up": "FOCUS_OVERRIDE_STOP",
          "$focus_override_up_binding_type": "none"
        }
      },
      {
        "fuel_item@common.container_item": {
          "$item_collection_name": "furnace_fuel_items",
          "$focus_id": "furnace_fuel_item",
          "$focus_override_right": "furnace_output_item",
          "$focus_override_right_binding_type": "none",
          "$focus_override_left": "FOCUS_OVERRIDE_STOP",
          "$focus_override_left_binding_type": "none",
          "offset": [
            0,
            30
          ]
        }
      }
    ]
  },
  "output_panel": {
    "type": "panel",
    "controls": [
      {
        "output_item@common.container_item": {
          "$item_collection_name": "furnace_output_items",
          "$focus_id": "furnace_output_item",
          "$focus_override_right_binding_type": "none",
          "$focus_override_right": "FOCUS_OVERRIDE_STOP",
          "$focus_override_left_binding_type": "none",
          "$focus_override_left": "furnace_fuel_item",
          "size": [
            26,
            26
          ],
          "$cell_image_size": [
            26,
            26
          ]
        }
      },
      {
        "progress@furnace.progress_panel": {
          "offset": [
            0,
            30
          ]
        }
      }
    ]
  },
  "furnace_label": {
    "type": "label",
    "text": "furnace.title",
    "color": "$title_text_color",
    "layer": 2
  },
  "furnace_panel_top": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 5,
    "offset": [
      0,
      "-20%"
    ],
    "size": [
      "100%",
      "50% - 12px"
    ],
    "controls": [
      {
        "flame@furnace.flame_panel": {
          "offset": [
            -32,
            12
          ]
        }
      },
      {
        "input@furnace.input_panel": {}
      },
      {
        "output@furnace.output_panel": {
          "offset": [
            32,
            0
          ]
        }
      }
    ]
  },
  "furnace_screen_content": {
    "type": "panel",
    "anchor_from": "center",
    "anchor_to": "center",
    "size": [
      "100%",
      "100%"
    ],
    "controls": [
      {
        "title@furnace.furnace_label": {
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "offset": [
            0,
            5
          ]
        }
      },
      {
        "inventory@furnace.inventory": {}
      },
      {
        "top@furnace.furnace_panel_top": {
        }
      }
    ]
  }
}